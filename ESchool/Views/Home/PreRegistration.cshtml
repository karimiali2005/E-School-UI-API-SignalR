<section class=" login-sec2">
    <div class=" container">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="register-success">
                <span>ثبت نام با موفقیت انجام شد / وارد شوید</span>
            </div>
        }
        <div class=" div-form row mx-0">
                <div class=" col-lg-6 col-12">
                    <form>
                        <div class="d-flex form-group">
                            <label for="" class="col-lg-4 col-3 font-weight-bold">مقطع تحصیلی</label>
                            <input type="text" class="form-control" id="ClassRoom">
                        </div>

                        <div class="d-flex form-group">
                            <label for="" class="col-lg-4 col-3 font-weight-bold">کد ملی</label>
                            <input type="number" class="form-control" id="Irnational">
                        </div>

                        <div class="d-flex form-group ">
                            <label for="" class="col-lg-4 col-3 font-weight-bold">نام</label>
                            <input type="text" class="form-control" id="FirstName">
                        </div>

                        <div class="d-flex form-group">
                            <label for="" class="col-lg-4 col-3 font-weight-bold">نام خانوادگی</label>
                            <input type="text" class="form-control" id="LastName">
                        </div>
                        <div class="d-flex form-group">
                            <label for=" " class="col-lg-4 col-3 font-weight-bold">نام پدر</label>
                            <input type="text" class="form-control" id="FatherName">
                         
                        </div>

                        <div class="d-flex form-group">
                            <label for=" " class="col-lg-4 col-3 font-weight-bold">همراه پدر</label>
                            <input type="number" class="form-control" id="FatherNumber">
                          
                        </div>
                        <div class="d-flex form-group">
                            <label for=" " class="col-lg-4 col-3 font-weight-bold">نام و نام خانوادگی مادر</label>
                            <input type="text" class="form-control" id="MotherFullName">
                         
                        </div>
                        <div class="d-flex form-group">
                            <label for=" " class="col-lg-4 col-3 font-weight-bold">همراه مادر</label>
                            <input type="number" class="form-control" id="MotherNumber">
                           
                        </div>

                        <div class="d-flex form-group">
                            <label for=" " class="col-lg-4 col-3 font-weight-bold">تصویر فیش</label>
                            <input type="file" class="form-control png" id="file">
                            
                        </div>
                        <div class="my-4">
                            <button type="button" onclick="PreRegistrationInsert(1)" class="btn btn-lg text-white submit-enter">ثبت</button>
                        </div>

                    </form>
                </div>
                <div class=" col-lg-6 left-img">
                    <!-- start cahnge11 -->
                    <div><img src="~/imagemember/01login2.png" class=" img-fluid" alt=""></div>
                    <!-- end cahnge11 -->

                </div>
            </div>
        </div>
</section>








