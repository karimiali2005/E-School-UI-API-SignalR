@{ 
    string title = Convert.ToString(ViewData["Title"]);
    string sitename = "مجتمع آموزشی دکتر حسابی کاشان";
    title = string.IsNullOrEmpty(title) ? sitename : title + " - " + sitename;

    string[] links = { "صفحه اصلی", "اخبار", "واحد ها", "ثبت نام دانش آموزان", "ورود به پنل کاربری", "همکاری با ما", "گالری تصاویر", "درباره ما" };
    string[] urls = { "#", "#", "#", "/Account/Register", "/Account/Login", "#", "#", "#"};
    
    var request = Context.Request;
    string currenturl = System.Web.HttpUtility.UrlDecode(request.Path + request.QueryString);

}

