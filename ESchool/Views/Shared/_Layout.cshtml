            <div class="line1 colorBackPrimary"></div>
            <div class="line2 colorBackPrimary"></div>
            <div class="line3 colorBackPrimary"></div>
        </div>
        <ul>
            @{
                int len = urls.Count();
                for (var i = 0; i < len; i++)
                {
                    string className = urls[i] == currenturl ? "select" : "";
                    <li><a class="@className" href="@urls[i]">@Html.Raw(links[i])</a></li>
                }
            }
            
        </ul>
        <div class="search colorBackPrimaryLight">
            <input type="text" id="txtSearch" class="colorPrimary" />
            <img src="/imagesite/icons/search.png" />
            @if (false)
            {
                <label class="colorPrimary">@Html.Raw(this.User.FindFirst("Nickname").Value + " - " + this.User.FindFirst("UserType").Value)</label>
            }
