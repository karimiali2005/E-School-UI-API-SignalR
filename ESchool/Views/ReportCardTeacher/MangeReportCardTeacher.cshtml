@model Es.DataLayerCore.DTOs.ReportCard.ReportCardTeacherViewModel
@{
    ViewBag.Title = "مدرسه حسابی";
    
    Layout = "_LayoutMember";

}



<section class=" Chat-page table-plan table-plan-lesson planAlllessons TeacherCardReport1">
    <div class="  p-0 chat">
        @await Html.PartialAsync("Header")
        <div class="selectLesson ">
            <div>
                @if (Model.ReportCardTeacherCourseByRoomChatGroupIDResult.Count() > 1)
                {
                    <select class="custom-select" id="validationCustom04" required on onchange="ReportCardDetailShow('@Model.RoomChatGroupID',this)">
                        <option selected disabled value="">انتخاب کنید...</option>
                        @foreach (var course in Model.ReportCardTeacherCourseByRoomChatGroupIDResult)
                        {
                            <option value="@course.CourseID">@Html.Raw(course.CourseTitle)</option>
                        }
                    </select>

                }
                else
                {
                    <br />
                    <span>@ViewBag.CourseTitle</span>
                }



            </div>
        </div>
        <div id="div-reportCardDetail" class=" table-div m-3">
            @await Html.PartialAsync("ReportCardDetail", Model.ReportCardTeacherShowResult)
        </div>
        </div>
</section>
@section Scripts
{
   
    <script src="/jsmember/ReportCard-1.0.3.js"></script>

}

