<div class="bigbox displayBlock textAlignRight">
    <input class="buttonSingle buttonSingle4 displayInlineBlock colorBackGreen" style="width :200px; float: left" value=" &#43; جدید" onclick="newsGallery()" />
</div>

<div class="bigbox displayBlock textAlignCenter colorBackWhite" style="overflow-x: auto; padding: 10px;">
    <table cellspacing="0" class="grid">
        <tr>
            
           
            <th>عنوان</th>
            <th>عملیات</th>
        </tr>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            <tr>

              
               
                <td>@Html.Raw(item.GalleryTitle)</td>
                <td>
                    <a class="operate" href="#" title="ویرایش">
                        <img class="icon" src="/imagepanel/icons/edit.png" onclick="editGallery(@item.GalleryId)" />
                    </a>
                    <a class="operate" href="#" title="افزودن عکس">
                        <img class="icon" src="/imagepanel/icons/layers.png" onclick="galleryDetailShow(@item.GalleryId)" />
                    </a>
                    <a class="operate" href="#" title="افزودن ویدیو">
                        <img class="icon" src="/imagepanel/icons/slideshow.png" onclick="galleryDetailVideoShow(@item.GalleryId)" />
                    </a>
                    <a class="operate" href="#" title="حذف">
                        <img class="icon" src="/imagepanel/icons/delete.png" onclick="gallerydelete(@item.GalleryId)" />
                    </a>
                </td>
            </tr>

            i++;
        }

    </table>

</div>



